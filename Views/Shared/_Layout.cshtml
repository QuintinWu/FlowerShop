<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 花店</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="wrap">
        <div class="header">
            <div class="logo"><a href="index.html"><img src="~/Content/Img/logo.gif" alt="" title="" border="0" /></a></div>
            <div id="menu">
                <ul>
                    <li id="home-index">@Html.ActionLink("主页", "Index", "Home")</li>
                    <li id="transaction-flowers">@Html.ActionLink("选购鲜花", "Flowers", "Trade")</li>
                    <li id="user-account">@Html.ActionLink("我的账户", "User", "Accounts")</li>
                    <li id="user-register">@Html.ActionLink("注册账号", "Register", "Accounts")</li>
                    <!--<li><a href="details.html">prices</a></li>-->
                    <li id="home-aboutus">@Html.ActionLink("关于我们", "About", "Home")</li>
                    <li id="home-contactus">@Html.ActionLink("联系我们", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
        <div class="center_content">
            <div class="left_content">
                @RenderBody()
                <div class="clear"></div>
            </div>
            <!--end of left content-->
            <div class="right_content">
                <div class="languages_box">
                    <span class="red">语言选择:</span>
                    <a href="#" class="selected"><img src="~/Content/Img/gb.gif" alt="" title="" border="0" /></a>
                    <a href="#"><img src="~/Content/Img/fr.gif" alt="" title="" border="0" /></a>
                    <a href="#"><img src="~/Content/Img/de.gif" alt="" title="" border="0" /></a>
                </div>
                <div class="currency">
                    <span class="red">币种: </span>
                    <a href="#">GBP</a>
                    <a href="#">EUR</a>
                    <a href="#" class="selected">USD</a>
                </div>
                <div class="cart">
                    <div class="title"><span class="title_icon"><img src="~/Content/Img/cart.gif" alt="" title="" /></span>我的购物车</div>
                    <div class="home_cart_content">
                        <span id="items-number">0</span>件商品 | 总价：<span class="red" id="totol-cost">0</span>元
                        @Html.ActionLink("进入购物车", "Cart")
                    </div>

                </div>


                <div class="title"><span class="title_icon"><img src="~/Content/Img/bullet3.gif" alt="" title="" /></span>关于我们的花店</div>
                <div class="about">
                    <p>
                        <img src="~/Content/Img/about.gif" alt="" title="" class="right" /> Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud.
                    </p>
                </div>


                <div class="right_box">
                    <div class="title"><span class="title_icon"><img src="~/Content/Img/bullet4.gif" alt="" title="" /></span>新品促销</div>
                    <div class="new_prod_box">
                        <a href="details.html">康乃馨</a>
                        <div class="new_prod_bg">
                            <span class="new_icon"><img src="~/Content/Img/promo_icon.gif" alt="" title="" /></span>
                            <a href="details.html"><img src="~/Content/Img/thumb1.gif" alt="" title="" class="thumb" border="0" /></a>
                        </div>
                    </div>
                    <div class="new_prod_box">
                        <a href="details.html">矢车菊</a>
                        <div class="new_prod_bg">
                            <span class="new_icon"><img src="~/Content/Img/promo_icon.gif" alt="" title="" /></span>
                            <a href="details.html"><img src="~/Content/Img/thumb2.gif" alt="" title="" class="thumb" border="0" /></a>
                        </div>
                    </div>
                    <div class="new_prod_box">
                        <a href="details.html">黄玫瑰</a>
                        <div class="new_prod_bg">
                            <span class="new_icon"><img src="~/Content/Img/promo_icon.gif" alt="" title="" /></span>
                            <a href="details.html"><img src="~/Content/Img/thumb3.gif" alt="" title="" class="thumb" border="0" /></a>
                        </div>
                    </div>
                </div>
                <div class="right_box">
                    <div class="title"><span class="title_icon"><img src="~/Content/Img/bullet5.gif" alt="" title="" /></span>鲜花品种</div>
                    <ul class="list">
                        <li><a href="#">accesories</a></li>
                        <li><a href="#">flower gifts</a></li>
                        <li><a href="#">specials</a></li>
                        <li><a href="#">hollidays gifts</a></li>
                        <li><a href="#">accesories</a></li>
                        <li><a href="#">flower gifts</a></li>
                        <li><a href="#">specials</a></li>
                        <li><a href="#">hollidays gifts</a></li>
                        <li><a href="#">accesories</a></li>
                        <li><a href="#">flower gifts</a></li>
                        <li><a href="#">specials</a></li>
                    </ul>
                    <div class="title"><span class="title_icon"><img src="~/Content/Img/bullet6.gif" alt="" title="" /></span>推荐搭配</div>
                    <ul class="list">
                        <li><a href="#">accesories</a></li>
                        <li><a href="#">flower gifts</a></li>
                        <li><a href="#">specials</a></li>
                        <li><a href="#">hollidays gifts</a></li>
                        <li><a href="#">accesories</a></li>
                        <li><a href="#">flower gifts</a></li>
                        <li><a href="#">specials</a></li>
                        <li><a href="#">hollidays gifts</a></li>
                        <li><a href="#">accesories</a></li>
                    </ul>
                </div>
            </div>
            <!--end of right content-->
            <div class="clear"></div>
        </div><!--end of center content-->


        <div class="footer">
            <div class="left_footer"><img src="~/Content/Img/footer_logo.gif" alt="" title="" /><br /> <a href="http://csscreme.com/freecsstemplates/" title="free templates"><img src="~/Content/Img/csscreme.gif" alt="free templates" title="free templates" border="0" /></a></div>
            <div class="right_footer">
                <a href="#">主页</a>
                <a href="#">关于我们</a>
                <a href="#">服务声明</a>
                <a href="#">隐私政策</a>
                <a href="#">联系我们</a>

            </div>


        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
